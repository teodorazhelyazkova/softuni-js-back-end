{{#if kittens}}
	{{#each kittens}}
		{{>kitten}}
	{{/each}}
{{else}}
	<p>There are no kittens!</p>
{{/if}}

<form method="post">
	<label for="name">Name</label>
	<br />
	<input type="text" name="name" id="name" />
	<br />
	<label for="age">Age</label>
	<br />
	<input type="number" name="age" id="age" />
	<br />
	<input type="submit" value="Add kitten" />
</form>