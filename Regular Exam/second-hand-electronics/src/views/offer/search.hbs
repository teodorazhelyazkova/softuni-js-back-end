<section class="search">
	<h1>Search</h1>

	<form class="search-form" method="POST">
		<input type="text" class="search-name" name="searchByName" placeholder="Search Name..." />
		<input type="text" class="search-type" name="searchByType" placeholder="Search Type..." />
		<button type="submit" class="btn-search">Search</button>
	</form>

	<div class="search-result">
		<div class="search-list">
			{{#each offers}}
				<a href="/offer/{{_id}}/details" class="added-electronics-in-market">
					<img src="{{image}}" class="picture-added-electronics" />
					<h3>{{name}}</h3>
					<span>Price: ${{price}}</span>
				</a>
			{{/each}}
		</div>
	</div>

	{{#if isSearch}}
		<div class="search-result">
			<div class="search-list">
				{{#each offersResult}}
					<a href="/offer/{{_id}}/details" class="added-electronics-in-market">
						<img src="{{image}}" class="picture-added-electronics" />
						<h3>{{name}}</h3>
						<span>Price: ${{price}}</span>
					</a>
				{{else}}
					<div class="no-match">
						<p>No match was found!</p>
					</div>
				{{/each}}
			</div>
		</div>
	{{/if}}
</section>