<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>Second Hand Electronics</title>
		<link rel="stylesheet" href="/css/styles.css" />
	</head>

	<body>
		{{#each errorMessages}}
			<div>
				<div class="errorContainer">
					<p>{{this}}</p>
				</div>
			</div>
		{{/each}}

		<div id="container">
			<nav>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/offer/catalog">Catalog</a></li>
					{{#if isAuthenticated}}
						<li><a href="/offer/create">Create Offer</a></li>
						<li><a href="/offer/search">Search</a></li>
						<li><a href="/user/logout">Logout</a></li>
					{{else}}
						<li><a href="/user/login">Login</a></li>
						<li><a href="/user/register">Register</a></li>
					{{/if}}
				</ul>
			</nav>

			{{{body}}}

			<footer>@SoftUni - JS Back-End - Second Hand Electronics 2023</footer>
		</div>
	</body>
</html>