<main class="search">
	<section id="search">
		<h2>Search by Location</h2>
		<form class="search-wrapper cf" method="POST">
			<input id="#search-input" type="text" name="search" placeholder="Search here..." required />
			<button type="submit">Search</button>
		</form>
		{{#if animalsByLocation}}
			<div id="search-container">
				<ul class="card-wrapper">
					{{#each animalsByLocation}}
						<li class="card">
							<img src="{{animalImg}}" />
							<p><strong>Name: </strong><span class="name">{{name}}</span></p>
							<p><strong>Location: </strong><span class="location">{{location}}</span></p>
							<p><strong>Need of:</strong><span class="need-of">{{needsOf}}</span></p>
							<a class="details-btn" href="/post/{{_id}}/details">Details</a>
						</li>
					{{else}}
						<div id="no-post">
							<h2>There are no results found.</h2>
						</div>
					{{/each}}
				</ul>
			</div>
		{{/if}}
	</section>
</main>